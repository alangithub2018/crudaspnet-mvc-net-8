@model IEnumerable<CRUDASPNETCoreMVC.Models.Contact>
@{
    ViewData["Title"] = "Contact List";
}

<h1 class="text-center">Contacts using .NET8 (.NET Core MVC)</h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Create" asp-controller="Home" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa fa-plus" aria-hidden="true"></i> New user
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title"><strong>Users list</strong></h3>
    </div>
    <div class="card-body">
        @if(Model.Count() > 0) 
        {
            <table class="table table-bordered" id="tblUsers" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                        <th>@Html.DisplayNameFor(m => m.Phone)</th>
                        <th>@Html.DisplayNameFor(m => m.CellPhone)</th>
                        <th>@Html.DisplayNameFor(m => m.Email)</th>
                        <th>@Html.DisplayNameFor(m => m.CreatedDate)</th>
                        <th>@Html.DisplayNameFor(m => m.UpdatedDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.Id)</td>
                            <td>@Html.DisplayFor(m => item.Name)</td>
                            <td>@Html.DisplayFor(m => item.Phone)</td>
                            <td>@Html.DisplayFor(m => item.CellPhone)</td>
                            <td>@Html.DisplayFor(m => item.Email)</td>
                            <td>@Html.DisplayFor(m => item.CreatedDate)</td>
                            <td>@Html.DisplayFor(m => item.UpdatedDate)</td>
                            <td>
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                                </a>
                                <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@item.Id">
                                    <i class="fa fa-info-circle" aria-hidden="true"></i> Detail
                                </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                    <i class="fa fa-eraser" aria-hidden="true"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        } else 
        {
            <p>No records</p>
        }
    </div>
</div>
